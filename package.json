{
  "name": "miniature-guacamole",
  "version": "1.0.0",
  "description": "Apple Music Next.js app",
  "main": "now.json",
  "repository": "https://github.com/mcansh/miniature-guacamole",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "type-check": "yarn workspaces run tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "sh scripts/ts-precommit.bash",
      "yarn workspace @gauc/web lint:css",
      "git add"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "1.10.2",
    "@typescript-eslint/parser": "1.10.2",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-kentcdodds": "14.3.3",
    "eslint-config-mcansh": "1.1.1",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "2.4.1",
    "lint-staged": "8.2.0",
    "prettier": "1.18.2"
  }
}
